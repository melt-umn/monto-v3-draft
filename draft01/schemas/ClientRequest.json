{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "ClientRequest",
	"type": "object",
	"properties": {
		"path": { "type": "string" },
		"request": {
			"type": "array",
			"minItems": 1,
			"items": { "$ref": "#/definitions/productRequest" },
			"uniqueItems": true
		}
	},
	"additionalProperties": false,
	"required": ["path", "request"],
	"definitions": {
		"productName": {
			"type": "string",
			"anyOf": [
				{ "$ref": "BuiltinProductName.json#" },
				{
					"type": "string",
					"pattern": "^[a-zA-Z][a-zA-Z0-9]*(\.[a-zA-Z][a-zA-Z0-9]*)*/[a-zA-Z0-9\._-]+$"
				}
			]
		},
		"productRequest": {
			"type": "object",
			"properties": {
				"product": { "$ref": "#/definitions/productName" },
				"service": { "$ref": "#/definitions/serviceId" }
			},
			"additionalProperties": false,
			"required": ["product", "service"]
		},
		"serviceId": {
			"type": "string",
			"pattern": "^[a-zA-Z_][a-zA-Z0-9_]*(\.[a-zA-Z_][a-zA-Z0-9_]*)*$"
		}
	}
}
